# ==================================================
# Laravel Octane / Swoole (Production VPS - STABLE)
# ==================================================
# VPS 2 CPU / 4GB RAM - Tested Configuration
#
# CRITICAL SETTINGS:
# - max_request = 0 (disable worker recycling to prevent container corruption)
# - enable_coroutine = false (prevent race conditions with PostgreSQL)
# - garbage collection setiap 25 requests

OCTANE_SERVER=swoole
SWOOLE_WORKER_NUM=4
SWOOLE_TASK_WORKER_NUM=2
SWOOLE_REACTOR_NUM=2
OCTANE_GARBAGE_COLLECTION=25
OCTANE_MAX_EXECUTION_TIME=30

# ==================================================
# Rate Limiting (Production)
# ==================================================
RATE_LIMIT_API_DEFAULT_MAX=60
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_ENROLLMENT_MAX=30

# ==================================================
# PostgreSQL Tuning (di postgresql.conf)
# ==================================================
# max_connections = 100
# shared_buffers = 1GB
# effective_cache_size = 3GB
# work_mem = 4MB
# maintenance_work_mem = 128MB
