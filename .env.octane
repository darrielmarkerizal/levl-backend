# OCTANE CONFIGURATION
OCTANE_SERVER=swoole
OCTANE_CACHE=true
OCTANE_GARBAGE_COLLECTION=150  # Balanced to reduce GC overhead

# SWOOLE SPECIFIC SETTINGS - OPTIMIZED FOR LOW LATENCY
SWOOLE_WORKER_NUM=8  # Balanced worker count (match to CPU cores, not exceed)
SWOOLE_MAX_REQUEST=5000  # High to minimize worker restarts but not excessive
SWOOLE_TASK_WORKER_NUM=4  # Balanced task workers

# HTTPS
OCTANE_HTTPS=false

# MEMORY OPTIMIZATION
PHP_MEMORY_LIMIT=2048M  # Standard allocation
OCTANE_MAX_EXECUTION_TIME=30

# DATABASE CONNECTION OPTIMIZATION - BALANCED PERFORMANCE
DB_POOL_SIZE=32  # Balanced pool
DB_MAX_CONNS=64  # Balanced max connections
DB_MIN_CONNS=8  # Balanced min connections

# CACHE OPTIMIZATION
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# REDIS OPTIMIZATION - BALANCED PERFORMANCE
REDIS_CLIENT=phpredis
REDIS_CLUSTER=predis
REDIS_MAX_CONNS=10  # Balanced connection pool
REDIS_MIN_CONNS=2   # Balanced minimum connections

# OPcache optimization
OPCACHE_ENABLE=1
OPCACHE_ENABLE_CLI=1
OPCACHE_JIT_BUFFER_SIZE=256M
OPCACHE_JIT=tracing

# APPLICATION LEVEL OPTIMIZATIONS
# Enable response caching where possible
RESPONSE_CACHE_ENABLED=true
# Minimize logging in production for better performance
LOG_LEVEL=error