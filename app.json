{
  "name": "TA Prep LSP Backend",
  "description": "Laravel API Backend for TA Prep LSP - CI Testing Only",
  "repository": "https://github.com/darrielmarkerizal/levl-be",
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql:in-dyno"
      ],
      "buildpacks": [
        {
          "url": "heroku/php"
        }
      ],
      "env": {
        "APP_ENV": "testing",
        "APP_DEBUG": "true",
        "DB_CONNECTION": "pgsql"
      },
      "scripts": {
        "test": "php artisan test --parallel"
      }
    }
  }
}
